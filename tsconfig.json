{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
          "*": ["src/*"]
        },
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "declaration": true,
        "target": "es6",
        "jsx": "react"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/**/__tests__/**/*",
      "src/setupEnzyme.ts"
    ]
}
